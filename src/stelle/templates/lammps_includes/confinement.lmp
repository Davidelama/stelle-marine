#---create confinement--------------------------------------------#
variable radius equal ramp(${start_radius},${end_radius})
region Cyl cylinder z 0 0 v_radius INF INF units box
fix wall all wall/region Cyl lj126 1.0 1.0 ${rcutoff}

unfix 5
fix 5 all enforce2d

timestep 0.00001
run 1000000
unfix wall

region finalCyl cylinder z 0 0 ${end_radius} INF INF units box
fix wall all wall/region finalCyl lj126 1.0 1.0 ${rcutoff}

unfix 5
fix 5 all enforce2d

reset_timestep 0